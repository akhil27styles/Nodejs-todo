<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task List</title>

    <!-- css file -->
    <link rel="stylesheet" href="/assets/styles.css" type="text/css">
    <!-- font -->
    <link href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap" rel="stylesheet">
    <!-- fontawesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<body>
    <div class="todo-container">
        <h2>Task List</h2>
        <div class="todo">
            <form action="/" method="POST" class="todo-header">
                <input type="text" name="content">
                <button type="submit"><span class="fas fa-plus"></span></button>
            </form>
            <ul class="todo-list">
                <% task.forEach(todo =>{ %>
                    <li class="todo-list-item">
                        <div class="todo-list-item-name"><%= todo.content %> </div>
                        <a href="/edit/<%=todo.id%>" class="edit"><span class="fas fa-edit"></span></a>
                        <a href="/remove/<%=todo.id%>" class="remove"><span class="fas fa-times"></span></a>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>
</body>
</html>